var common = {
  // 将整数部分逢三一断
  numberFormat: function (val) {
    val = val.toFixed(2)
    if (!val) return '0'
    var intPartFormat = val.replace(getRegExp('(\d{1,3})(?=(\d{3})+(?:$|\.))'), '$1,') //将整数部分逢三一断
    return intPartFormat
  },
  isEmptyObject:function(obj){
    var bl = JSON.stringify(obj)
    if(bl === '{}') return true 
    else return false
  }
}
module.exports = common